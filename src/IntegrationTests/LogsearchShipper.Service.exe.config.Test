<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="LogsearchShipperGroup">
      <section
        name="LogsearchShipper"
        type="LogsearchShipper.Core.ConfigurationSections.LogsearchShipperSection, LogsearchShipper.Core"
        allowLocation="true"
        allowDefinition="Everywhere"
      />
    </sectionGroup>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <LogsearchShipperGroup>
    <LogsearchShipper ingestor_host="54.194.76.47" ingestor_port="5514" ssl_ca="C:\Keys\ingestor.meta.logsearch.io.crt">
      <fileWatchers>
        <watch files="logs\*.*" type="plain">
          <field key="environment" value="LogSearchShipper.Test" />
          <field key="type" value="json" />
        </watch>
      </fileWatchers>
    </LogsearchShipper>
  </LogsearchShipperGroup>

  <log4net>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%utcdate{ISO8601} [%thread] %-5level %logger - %.255message%newline" />
      </layout>
    </appender>
    <root>
      <levelMin value="INFO" />
      <levelMax value="FATAL" />
      <appender-ref ref="ConsoleAppender" />
    </root>
  </log4net>

</configuration>